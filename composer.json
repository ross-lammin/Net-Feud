{
    "name": "platform/platform-wordpress",
    "description": "WordPress for Platform.sh",
    "license": "GPL-2.0+",
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "require": {
        "johnpbloch/wordpress-core-installer": "~0.2",
        "johnpbloch/wordpress": "~4.7"
