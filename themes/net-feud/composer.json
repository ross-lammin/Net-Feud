{
  "name": "first10/f10-theme-experimental",
  "type": "project",
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "require": {
    "johnpbloch/wordpress-core-installer": "^0.2.1",
    "johnpbloch/wordpress": "4.7.4.1"
  },
  "authors": [
    {
      "name": "James Drawneek",
      "email": "jmdrawneek@googlemail.com"
    }
  ],
  "extra": {
    "wordpress-install-dir": "wp",
    "installer-paths": {
      "wp/wp-content/plugins/{$name}/": ["type:wordpress-plugin"]
    }
  },
  "scripts": {
    "post-install-cmd": [
      "cp wp-config.php wp/wp-config.php",
      "cp local.wp-config.php wp/local.wp-config.php"
    ]
  }
}

